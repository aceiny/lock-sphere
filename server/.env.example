# =============================
# General App Configuration
# =============================
APP_ENV=production        # development | staging | production
APP_PORT=8080
APP_DEBUG=false           # true | false

# Frontend and Backend URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8080

# =============================
# Security & Authentication
# =============================
JWT_SECRET=supersecretkey
JWT_EXPIRATION=24h
JWT_REFRESH_SECRET=refreshsecretkey
JWT_REFRESH_EXPIRATION=168h  # 7 days
HASH_SALT=10                 # Bcrypt salt rounds

# =============================
# Database Configuration
# =============================
DB_DRIVER=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_NAME=mydatabase
DB_SSL_MODE=disable        # enable | disable

# =============================
# Cookie Configuration
# =============================
COOKIE_NAME=session_token
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false       # true for HTTPS
COOKIE_HTTPONLY=true
COOKIE_EXPIRATION=3600    # in seconds (1 hour)

# =============================
# Redis (Caching & Sessions)
# =============================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# =============================
# Email Service (SMTP)
# =============================
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=noreply@yourapp.com

# =============================
# Cloud Storage (AWS S3)
# =============================
AWS_ACCESS_KEY=your_aws_access_key
AWS_SECRET_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=my-bucket

# =============================
# Third-Party Services (Example: Stripe)
# =============================
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key

# =============================
# General App Configuration
# =============================
APP_ENV=production        # development | staging | production
APP_PORT=8080
APP_DEBUG=false           # true | false

# Frontend and Backend URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8080

# =============================
# Security & Authentication
# =============================
JWT_SECRET=supersecretkey
JWT_EXPIRATION=24h
JWT_REFRESH_SECRET=refreshsecretkey
JWT_REFRESH_EXPIRATION=168h  # 7 days
HASH_SALT=10                 # Bcrypt salt rounds

# =============================
# Database Configuration
# =============================
DB_DRIVER=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_NAME=mydatabase
DB_SSL_MODE=disable        # enable | disable
POOL_SIZE=10
POOL_TIMEOUT=30s
POOL_MAX_CONN_LIFETIME=30m
# =============================
# Cookie Configuration
# =============================
COOKIE_NAME=session_token
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false       # true for HTTPS
COOKIE_HTTPONLY=true
COOKIE_EXPIRATION=3600    # in seconds (1 hour)

# =============================
# Redis (Caching & Sessions)
# =============================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# =============================
# Email Service (SMTP)
# =============================
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=noreply@yourapp.com
SENDGRID_API_KEY=your-sendgrid-api-key # in case of using sendgrid 

# =============================
# Cloud Storage (AWS S3)
# =============================
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# =============================
# Defaults
# =============================
DEFAULT_PROFILE_PICTURE=https://your-cloudinary-url.com/default-profile-picture.jpg

# =============================
# Third-Party Services
# =============================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URL=https://your-backend-domain.com/oauth/google/callback